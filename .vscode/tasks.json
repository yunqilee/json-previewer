// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["npm: watch:tsc", "npm: watch:esbuild"],
      "presentation": { "reveal": "never" },
      "group": { "kind": "build", "isDefault": true }
    },

    {
      "type": "npm",
      "script": "watch:esbuild",
      "group": "build",
      "isBackground": true,
      "label": "npm: watch:esbuild",
      "presentation": { "group": "watch", "reveal": "never" },
      "problemMatcher": {
        "owner": "esbuild",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          // 典型 esbuild 报错格式: src/extension.ts:10:5: ERROR: ...
          "regexp": "^(.*):(\\d+):(\\d+):\\s+ERROR:\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*watching.*", // esbuild 输出里会提示 "watching..."
          "endsPattern": ".*finished.*" // 或者 "built in"
        }
      }
    },

    {
      "type": "npm",
      "script": "watch:tsc",
      "group": "build",
      "isBackground": true,
      "label": "npm: watch:tsc",
      "presentation": { "group": "watch", "reveal": "never" },
      "problemMatcher": "$tsc-watch"
    },

    {
      "type": "npm",
      "script": "watch-tests",
      "isBackground": true,
      "presentation": { "reveal": "never", "group": "watchers" },
      "group": "build",
      "label": "npm: watch-tests",
      "problemMatcher": "$tsc-watch"
    },

    {
      "label": "tasks: watch-tests",
      "dependsOn": ["watch", "npm: watch-tests"]
    }
  ]
}
